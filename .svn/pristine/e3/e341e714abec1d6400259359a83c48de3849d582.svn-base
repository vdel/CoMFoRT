/* Fixed Artsy style 
 Created for CoMFoRT in 2008 by Alexandra Monclair 
 Un style simple avec le menu fixé sur le côté, utile pour la navigation du site*/

@import url(../common/wiki.css);

body {
	background: url("images/bgimage.png") repeat-y white;
	color : black;
	width: 95%;
	font-size:0.9em;
    font-family:"Arial Narrow Italic", Skia, Georgia,Arial,Helvetica,sans-serif;
    //margin-left : auto;
    margin-right :auto;
    padding-right : 5px;
    		border-right : 2px solid black;


}
.sect1 {
	padding-left : 20px;
	margin-left : 205px; 
}
#ie6hack {
	display:block;
	color: white; 
	background : url("images/banner.png") no-repeat black;
	font-size: 3em;
	text-align: center;
	width:100%;
	margin-left:5px;
	padding : 10px;
	font-family: "Apple Chancery", "Zapf Chancery", cursive ,"Arial Narrow Italic", Skia, Georgia,Arial,Helvetica,sans-serif;

}

#ie6hack .title {
	color:white;
	border-top: none;
	font-size : 0.5em;
}


p {
	text-align: justify;
	text-indent: 10px;
	line-height:1.5em;
}


hr {
	color : #094149;
	background :#094149;
	height : 3px;
	width : 100%;
}

h1, h2, h3, h4, h5, h6  {
	font-family: "Apple Chancery", "Zapf Chancery", cursive;

	letter-spacing : 1px;
		color: black;
		border-top : dotted black 1px;
		letter-spacing : 2px;
}
h1 { font-size:1.33em; }
h2 { font-size:1.44em; }
h3 { font-size:1.22em; }
h4 { font-size:1.07em; }
h5 { font-size:1.0em; }
h6 { font-size:1.0em; }

.footnote {
	margin-left : 220px;
}

#Menu {
	float : left;
	position: fixed;
	width: 150px;
	margin-left:0px;
}

a {
	color: #999999;
	text-decoration:none;
}

a img {
	border: none;
}

a:visited {
		color: #914d88;
}

a:hover {
	text-decoration:underline;
}

.article {
		padding-right : 20px;
}

#Menu ul {
	list-style: none;
	text-indent : 2px;
	margin : 5px; 
	padding : 0px;
}

#Menu a {
		color:white;
}


#Menu li {
	margin : 0px;
}

#Menu ul li a {
	display : block ;
}

#Menu ul li a:hover {
	color:#black;
	background : #white;
	text-decoration : none;
}

#Menu ul li {
	list-style-type : none;
	text-indent : 2px;
	line-height: 20px;
	font-size: 1.1em; 
	letter-spacing : 2px;
	border-top : 1px #a3b0b1 dotted;
	padding-top : 1px;
	padding-bottom : 1px;
}


.feet {
  background : black;
  clear: both;
  width: 100%
  height: 40px;
  margin-left : 216px;
padding: 10px 0 10px 0;  
text-align: center;
  font-size: 0.7em;
  color: #white;
}

.feet a {
	color : white; 
}

.comfort {
 width: 80%;
  margin-left: 195px;
 margin-top: 1em;
}

