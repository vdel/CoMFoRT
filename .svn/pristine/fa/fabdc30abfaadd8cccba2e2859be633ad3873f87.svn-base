def EncodeToWrite(s):
  """ encode a string to be write in the file """
  try:
    a = s.encode("utf-8")
  except:
    a = s
  return a

def DecodeReading(s):
  """ decode a read string """
  try:
    a = s.decode("utf-8")
  except:
    a = s
  return a
